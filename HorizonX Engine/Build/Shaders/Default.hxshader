<vertex>
    #version 330

    layout(location = 0) in vec3 vertexPosition_modelspace;

    void main() {
        gl_Position.xyz = vertexPosition_modelspace;
        gl_Position.w = 1.0;
    }
</vertex>

<fragment>
    #version 330

    out vec4 color;

    void main() {
        color = vec3(1, 0, 1);
    }
</fragment>